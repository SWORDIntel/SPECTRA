{
  "accounts": [
    {
      "api_id": 12345678,
      "api_hash": "abcdef1234567890abcdef1234567890",
      "session_name": "account1",
      "phone_number": "+1234567890",
      "password": ""
    }
  ],
  "proxy": {
    "enabled": true,
    "type": "socks5",
    "host": "rotating.proxyempire.io",
    "port": 9000,
    "username": "your_username",
    "password": "your_password",
    "rotation": {
      "enabled": true,
      "ports": [9000, 9001, 9002, 9003, 9004, 9005]
    }
  },
  "archive": {
    "download_media": true,
    "download_avatars": true,
    "archive_topics": true,
    "media_types": ["photo", "video", "document", "audio", "voice", "sticker"],
    "max_file_size_mb": 50,
    "output_format": "json"
  },
  "discovery": {
    "max_messages": 1000,
    "max_depth": 2,
    "include_private": true,
    "include_public": true
  },
  "parallel": {
    "enabled": true,
    "max_workers": 4,
    "max_tasks_per_account": 50,
    "rate_limit": {
      "join_delay_seconds": 30,
      "message_delay_seconds": 2
    }
  },
  "account_rotation": {
    "mode": "smart",
    "cooldown_hours": 2,
    "max_operations_per_account": 100,
    "flood_wait_multiplier": 1.5
  },
  "db": {
    "path": "spectra.db",
    "export_csv": false,
    "backup_interval_hours": 24
  },
  "logging": {
    "level": "INFO",
    "file": "spectra.log",
    "console": true,
    "max_size_mb": 10,
    "backup_count": 5
  },
  "default_forwarding_destination_id": null,
  "forwarding": {
    "enable_deduplication": true,
    "secondary_unique_destination": null,
    "auto_invite_accounts": true,
    "invitation_delays": {
      "min_seconds": 120,
      "max_seconds": 600,
      "variance": 0.3
    }
  },
  "scheduler": {
    "enabled": false,
    "timezone": "UTC",
    "state_file": "scheduler_state.json",
    "bandwidth_limit_kbps": 0,
    "schedule_check_interval_seconds": 60,
    "max_concurrent_forwards": 4,
    "error_retry_attempts": 3
  },
  "notifications": {
    "enabled": false,
    "provider": "placeholder",
    "config": {}
  },
  "file_sorter": {
    "extension_mapping": {
      "text": [".txt", ".md", ".json"],
      "pdf": [".pdf"],
      "archive": [".zip", ".rar", ".7z", ".tar", ".gz"],
      "image": [".jpg", ".jpeg", ".png", ".gif", ".bmp"],
      "video": [".mp4", ".mkv", ".avi", ".mov"],
      "document": [".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx"],
      "source_code": [".py", ".js", ".java", ".c", ".cpp", ".h", ".html", ".css"]
    },
    "group_naming_template": "SPECTRA-{category}",
    "group_description_template": "A group for {category} files.",
    "group_creation_rate_limit_seconds": 60,
    "group_privacy": {
      "is_public": false
    },
    "sorting_enabled": true,
    "group_creation_enabled": true,
    "default_sorting_groups": {
      "text_files": "SPECTRA-Text-Files",
      "pdf_files": "SPECTRA-PDF-Files",
      "archive_files": "SPECTRA-Archive-Files",
      "image_files": "SPECTRA-Image-Files",
      "video_files": "SPECTRA-Video-Files",
      "document_files": "SPECTRA-Document-Files",
      "source_code_files": "SPECTRA-Source-Code-Files",
      "miscellaneous_files": "SPECTRA-Miscellaneous-Files"
    }
  },
  "attribution": {
    "template": "Forwarded from {source_channel_name} (ID: {source_channel_id}) by {sender_name} (ID: {sender_id}) at {timestamp} (Message ID: {message_id})",
    "timestamp_format": "%Y-%m-%d %H:%M:%S",
    "preserve_message_id": true,
    "style": "text",
    "disable_attribution_for_groups": []
  },
  "forwarding_mode": {
    "enabled": false
  },
  "migration_mode": {
    "use_parallel": false
  },
  "topic_organization": {
    "enabled": true,
    "mode": "auto_create",
    "topic_strategy": "content_type",
    "fallback_strategy": "general_topic",
    "max_topics_per_channel": 100,
    "topic_creation_cooldown_seconds": 30,
    "enable_content_analysis": true,
    "classification_confidence_threshold": 0.7,
    "general_topic_title": "General Discussion",
    "auto_cleanup_empty_topics": false,
    "enable_statistics": true,
    "debug_mode": false,
    "content_type_mapping": {
      "photo": {
        "title": "üì∏ Photos",
        "icon_color": 3498212,
        "category": "photos"
      },

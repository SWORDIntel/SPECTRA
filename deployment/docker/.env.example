# SPECTRA Docker Environment Configuration
# Copy this file to .env and fill in your credentials

# === TELEGRAM API CREDENTIALS ===
# Get these from https://my.telegram.org/apps
TG_API_ID=your_api_id_here
TG_API_HASH=your_api_hash_here

# === LOGGING ===
LOG_LEVEL=INFO

# === PROXY CONFIGURATION (OPTIONAL) ===
# PROXY_HOST=rotating.proxyempire.io
# PROXY_USER=your_proxy_user
# PROXY_PASSWORD=your_proxy_password
# PROXY_PORTS=9000,9001,9002,9003,9004

# === DATABASE CONFIGURATION ===
# SPECTRA_DB_PATH=/app/data/spectra.db

# === MEDIA DOWNLOAD SETTINGS ===
# DOWNLOAD_MEDIA=true
# DOWNLOAD_AVATARS=true
# MEDIA_MIME_WHITELIST=

# === BATCH PROCESSING ===
# BATCH_SIZE=500
# SLEEP_BETWEEN_BATCHES=1.0

# === MONITORING ===
# HEALTH_CHECK_PORT=8080
# METRICS_ENABLED=true

# === SECURITY ===
# Enable TEMPEST Class C features
# SECURE_LOGGING=true
# MEMORY_SCRUBBING=true
# CREDENTIAL_ENCRYPTION=true

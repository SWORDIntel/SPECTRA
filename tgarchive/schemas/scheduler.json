{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Scheduler Configuration",
    "type": "object",
    "properties": {
        "enabled": {
            "type": "boolean"
        },
        "timezone": {
            "type": "string"
        },
        "state_file": {
            "type": "string"
        },
        "bandwidth_limit_kbps": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": ["enabled", "timezone", "state_file"]
}
